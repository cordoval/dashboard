<div class="section-repository">
    <h2>{{ repo.data.name }}</h2>

    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#{{ repo.data.owner_login }}_-_{{ repo.data.name }}-pulls" data-toggle="tab">
                Pulls ({{ pulls|length }}/{{ repo.data.open_pull_count }})
            </a>
        </li>
        <li>
            <a href="#{{ repo.data.owner_login }}_-_{{ repo.data.name }}-issues" data-toggle="tab">
                Issues ({{ issues|length }}/{{ repo.data.open_issues_only }})
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="{{ repo.data.owner_login }}_-_{{ repo.data.name }}-pulls" class="tab-pane active">
            {% include "DbuDashboardBundle:Github:issues.html.twig" with {"issues": pulls} %}
        </div>
        <div id="{{ repo.data.owner_login }}_-_{{ repo.data.name }}-issues" class="tab-pane">
            {% include "DbuDashboardBundle:Github:issues.html.twig" with {"issues": issues} %}
        </div>
    </div>
</div>
